<!DOCTYPE html>
<html>
  <head>
    <%-include('./partials/head.ejs') %>
  </head>
  <body>
    <h1>Edit Pokemon Page</h1>
    <form action="/pokemon/<%=id%>?_method=PUT" method="POST">
        <input type="text" name="name" value="<%=allPokemon.name%>"placeholder="name"/>
        <input type="text" name="img" value="<%=allPokemon.img%>"placeholder="image url link"/>
        <input type="text" name="type" value="<%=allPokemon.type%>"placeholder="type"/>
        <input type="text" name="hp" value="<%=allPokemon.stats.hp%>"placeholder="hp"/>
        <input type="text" name="attack" value="<%=allPokemon.stats.attack%>"placeholder="attack"/>
        <input type="text" name="defense" value="<%=allPokemon.stats.defense%>"placeholder="defense"/>
        <input type="text" name="spattack" value="<%=allPokemon.stats.spattack%>"placeholder="spattack"/>
        <input type="text" name="spdefense" value="<%=allPokemon.stats.spdefense%>"placeholder="spdefense"/>
        <input type="text" name="speed" value="<%=allPokemon.stats.speed%>"placeholder="speed"/>
        <input type="submit" value="submit edit"/>
    </form>
  </body>
</html>